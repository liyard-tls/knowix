rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ─── Users ───────────────────────────────────────────────────
    // Only the owner can read/write their own profile.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ─── Chat history ─────────────────────────────────────────────
    // Doc ID: {uid}_{courseId}_{questionId}
    // Only the owner (uid prefix match) can read/write.
    match /chatHistory/{docId} {
      allow read, write: if request.auth != null
                         && docId.matches(request.auth.uid + '_.*');
    }

    // ─── Courses ─────────────────────────────────────────────────
    // Read:
    //   - owner always can read their courses
    //   - any authenticated user can read a public course (isPublic == true)
    //
    // Write (update/delete):
    //   - only the owner
    //
    // Create:
    //   - authenticated user can create, must set themselves as owner
    //   - isPublic must be a boolean (defaults to false on creation)
    match /courses/{courseId} {
      allow read: if request.auth != null
                  && (resource.data.userId == request.auth.uid
                      || resource.data.isPublic == true);

      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.isPublic is bool;

      allow update: if request.auth != null
                    && resource.data.userId == request.auth.uid
                    // owner cannot be changed
                    && request.resource.data.userId == resource.data.userId;

      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;
    }
  }
}

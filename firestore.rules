rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ─── Users ───────────────────────────────────────────────────
    match /users/{userId} {
      // Any signed-in user can read any profile (needed for public profiles + friend lookup).
      allow read: if request.auth != null;

      // Full write for owner (XP, streak, achievements, friends list, etc.)
      allow write: if request.auth != null && request.auth.uid == userId;

      // Allow any signed-in user to update ONLY the friendRequestsIn and friends fields
      // on someone else's document (needed for friend requests and accept/remove flows).
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['friendRequestsIn', 'friends']);
    }

    // ─── Chat history ─────────────────────────────────────────────
    // Doc ID: {uid}_{courseId}_{questionId}
    // Only the owner (uid prefix match) can read/write.
    match /chatHistory/{docId} {
      allow read, write: if request.auth != null
                         && docId.matches(request.auth.uid + '_.*');
    }

    // ─── Friend Requests ─────────────────────────────────────────
    match /friendRequests/{requestId} {
      // Parties of the request can read it.
      allow read: if request.auth != null
                  && (resource.data.from == request.auth.uid
                      || resource.data.to == request.auth.uid);

      // Any signed-in user can create a request where they are the sender.
      allow create: if request.auth != null
                    && request.resource.data.from == request.auth.uid
                    && request.resource.data.status == 'pending';

      // Only the recipient can update (accept/decline).
      // Only the 'status' field may change.
      allow update: if request.auth != null
                    && resource.data.to == request.auth.uid
                    && request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['status']);
    }

    // ─── Courses ─────────────────────────────────────────────────
    // Read:
    //   - owner always can read their courses
    //   - any authenticated user can read a public course (isPublic == true)
    //
    // Write (update/delete):
    //   - only the owner
    //
    // Create:
    //   - authenticated user can create, must set themselves as owner
    //   - isPublic must be a boolean (defaults to false on creation)
    match /courses/{courseId} {
      allow read: if request.auth != null
                  && (resource.data.userId == request.auth.uid
                      || resource.data.isPublic == true);

      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.isPublic is bool;

      allow update: if request.auth != null
                    && resource.data.userId == request.auth.uid
                    // owner cannot be changed
                    && request.resource.data.userId == resource.data.userId;

      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;
    }
  }
}
